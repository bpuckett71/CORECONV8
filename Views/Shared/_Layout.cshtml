<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Main Header -->
    <div class="main-container">
        <div class="row">
            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-6">
                <div class="vspace"></div>
                <div class="vspace"></div>
                <span class="corecon-menu-logo">
                    <img class="img-responsive" src="~/images/logo-l.png">
                </span>
            </div>
            <div class="col-lg-8 col-md-6 col-sm-6 col-xs-6">
                <span class="header-logo-text">Corecon External API Client &nbsp; <span class="small">(Resource Owner Credentials)</span></span>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12 text-right">

                <a href="~/Content/help.html" target="_blank">
                    <i title="Knowledge Base" class="global-help-icon"></i>
                </a>
                &nbsp;                
            </div>
        </div>        
        <div>
            <div class="container-fluid mt-5">

                @RenderBody()

                <hr />
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"></div>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                        <footer>
                            <p>&copy; @DateTime.Now.Year - Corecon Api </p>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
